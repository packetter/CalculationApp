<Window x:Class="CalculationApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:CalculationApp.ViewModels"
        Title="サブスク管理カリキュレーター" 
        Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,10,0,10" />
        </Style>
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,8,0" />
        </Style>
        <Style x:Key="InputBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Padding" Value="4,3" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Padding" Value="16,6" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        <Style x:Key="SummaryValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#2266AA" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="14" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Style="{StaticResource HeaderText}"
                   Text="サブスク管理カリキュレーター" />

        <!-- Input Area -->
        <GroupBox Grid.Row="1" Header="サブスクを追加" Margin="0,0,0,10" Padding="8"
                  Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="12" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="サービス名" Style="{StaticResource LabelText}" />
                <TextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource InputBox}"
                         Text="{Binding NewName, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="2" Grid.Column="0" Text="月額（円）" Style="{StaticResource LabelText}" />
                <TextBox Grid.Row="2" Grid.Column="1" Style="{StaticResource InputBox}"
                         Text="{Binding NewPrice, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="4" Grid.Column="0" Text="カテゴリ" Style="{StaticResource LabelText}" />
                <ComboBox Grid.Row="4" Grid.Column="1" FontSize="13" Padding="4,3"
                          ItemsSource="{Binding Categories}"
                          SelectedItem="{Binding SelectedCategory}" />

                <Button Grid.Row="6" Grid.Column="1" Content="追加"
                        Style="{StaticResource ActionButton}"
                        HorizontalAlignment="Right"
                        Command="{Binding AddCommand}" />
            </Grid>
        </GroupBox>

        <!-- Subscription List -->
        <GroupBox Grid.Row="2" Header="登録済みサブスク" Padding="8"
                  Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <DataGrid Grid.Row="0"
                          ItemsSource="{Binding Subscriptions}"
                          SelectedItem="{Binding SelectedSubscription}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          SelectionMode="Single"
                          FontSize="13">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="サービス名" Binding="{Binding Name}" Width="*" />
                        <DataGridTextColumn Header="月額（円）" Binding="{Binding MonthlyPrice, StringFormat={}{0:#,0}}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Right" />
                                    <Setter Property="Padding" Value="0,0,8,0" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="カテゴリ" Binding="{Binding Category}" Width="100" />
                    </DataGrid.Columns>
                </DataGrid>

                <Button Grid.Row="1" Content="選択したサブスクを削除"
                        Style="{StaticResource ActionButton}"
                        HorizontalAlignment="Right"
                        Margin="0,8,0,0"
                        Command="{Binding DeleteCommand}" />
            </Grid>
        </GroupBox>

        <!-- Summary -->
        <GroupBox Grid.Row="3" Header="合計" Margin="0,10,0,0" Padding="8"
                  Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="月額合計" FontSize="12"
                           HorizontalAlignment="Center" Foreground="Gray" />
                <TextBlock Grid.Row="0" Grid.Column="1" Text="年間合計" FontSize="12"
                           HorizontalAlignment="Center" Foreground="Gray" />
                <TextBlock Grid.Row="0" Grid.Column="2" Text="1日あたり" FontSize="12"
                           HorizontalAlignment="Center" Foreground="Gray" />

                <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource SummaryValue}"
                           HorizontalAlignment="Center">
                    <Run Text="¥" /><Run Text="{Binding MonthlyTotal, StringFormat={}{0:#,0}, Mode=OneWay}" />
                </TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource SummaryValue}"
                           HorizontalAlignment="Center">
                    <Run Text="¥" /><Run Text="{Binding YearlyTotal, StringFormat={}{0:#,0}, Mode=OneWay}" />
                </TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="2" Style="{StaticResource SummaryValue}"
                           HorizontalAlignment="Center">
                    <Run Text="¥" /><Run Text="{Binding DailyAmount, Mode=OneWay}" />
                </TextBlock>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
